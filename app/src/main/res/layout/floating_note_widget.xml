<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/complete_bubble">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close"
        android:id="@+id/click_to_close">
    </ImageView>

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/object_name_bubble">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_circle"
            android:id="@+id/object_name_circle">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Object Name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="12dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/object_name_text">
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/optionsParentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/threeParentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="New note with TAG"
                android:background="@color/transparentBlack"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/keyNote">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:text="New note with Text"
                android:background="@color/transparentBlack"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/textNote">
            </TextView>


            <ListView
                android:id="@+id/openNoteList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:background="@color/transparentBlack"
                android:divider="@android:color/black"
                android:dividerHeight="1px">
            </ListView>

            <ListView
                android:id="@+id/addKeyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:background="@color/transparentBlack"
                android:divider="@android:color/black"
                android:dividerHeight="1px">
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparentBlack"
            android:padding="@dimen/padding"
            android:layout_margin="@dimen/margin">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="@dimen/margin"
                android:src="@drawable/ic_menu_back"
                android:id="@+id/click_to_back">
            </ImageView>

            <ListView
                android:id="@+id/floatingListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@android:color/black"
                android:dividerHeight="1px">
            </ListView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>